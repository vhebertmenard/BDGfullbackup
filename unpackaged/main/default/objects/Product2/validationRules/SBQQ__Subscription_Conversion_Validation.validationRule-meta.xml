    <errorConditionFormula>ISPICKVAL(SBQQ__SubscriptionConversion__c, 'One per subscribed asset') &amp;&amp; NOT(ISPICKVAL(SBQQ__SubscriptionPricing__c, 'Percent Of Total'))</errorConditionFormula>
