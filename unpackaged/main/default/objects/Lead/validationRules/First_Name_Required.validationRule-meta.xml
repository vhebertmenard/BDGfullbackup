<?xml version="1.0" encoding="utf-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>First_Name_Required</fullName>
    <active>true</active>
    <description>The first name is required.</description>
    <errorConditionFormula>AND(
RecordType.Name &lt;&gt; "Vanguard",
ISBLANK(FirstName)
)</errorConditionFormula>
    <errorDisplayField>FirstName</errorDisplayField>
    <errorMessage>The first name is required.</errorMessage>
</ValidationRule>
