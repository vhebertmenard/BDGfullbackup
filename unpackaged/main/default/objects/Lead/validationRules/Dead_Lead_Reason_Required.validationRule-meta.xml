<?xml version="1.0" encoding="utf-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Dead_Lead_Reason_Required</fullName>
    <active>true</active>
    <description>A reason is required if the lead is dead.</description>
    <errorConditionFormula>AND(
 RecordType.Name &lt;&gt; "Vanguard",
 ISPICKVAL(Status, 'Dead'),
 ISPICKVAL(Dead_Lead_Reason__c, '')
)</errorConditionFormula>
    <errorDisplayField>Dead_Lead_Reason__c</errorDisplayField>
    <errorMessage>A reason is required if the lead is dead.</errorMessage>
</ValidationRule>
