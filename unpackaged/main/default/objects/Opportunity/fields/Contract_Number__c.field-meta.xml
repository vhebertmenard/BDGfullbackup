<?xml version="1.0" encoding="utf-8"?>
<CustomField xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Contract_Number__c</fullName>
    <description>Concatenate the Branch code with the Opportunity ID to create the contract #</description>
    <externalId>false</externalId>
    <formula>IF( OR(AND(Renewal_Opportunity__c,NOT(Vanguard_Renewal__c )), Imported_from_SAP__c ), Original_Contract__c ,SUBSTITUTE( Opportunity_ID__c , "O-", BranchCode__c &amp; "-"))</formula>
    <inlineHelpText>Contract Number (built from the Opp ID and Branch code)</inlineHelpText>
    <label>Contract #</label>
    <required>false</required>
    <trackHistory>false</trackHistory>
    <type>Text</type>
    <unique>false</unique>
</CustomField>
