<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>SBQQ__Account__c</field>
        <field>SBQQ__Opportunity2__c</field>
        <field>SBQQ__NetAmount__c</field>
        <field>Transaction_Type__c</field>
        <field>Transaction_Type_Detail__c</field>
        <field>T_C__c</field>
        <field>SBQQ__SalesRep__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Approver_I__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>Unanimous</whenMultipleApprovers>
        </assignedApprover>
        <description>Authority Matrix Level I</description>
        <entryCriteria>
            <criteriaItems>
                <field>SBQQ__Quote__c.Approver_I__c</field>
                <operation>notEqual</operation>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Branch Manager - Sale 20%+ $500k&lt; BID &gt; $3M</label>
        <name>Branch_Manager_Sale_20_500k_BID_3M</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Approver_G__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>Unanimous</whenMultipleApprovers>
        </assignedApprover>
        <description>Authority Matrix Level G</description>
        <entryCriteria>
            <criteriaItems>
                <field>SBQQ__Quote__c.Approver_G__c</field>
                <operation>notEqual</operation>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Regional Manager - Sale 20%+ $500k&lt; BID &gt; $3M</label>
        <name>Regional_Manager_Sale_20_500k_BID_3M</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Approver_E__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Authority Matrix Level E</description>
        <entryCriteria>
            <criteriaItems>
                <field>SBQQ__Quote__c.Approver_E__c</field>
                <operation>notEqual</operation>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>VP - Sale 20%+ $500k&lt; BID &gt; $3M</label>
        <name>VP_Sale_20_500k_BID_3M</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Approver_D__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>Unanimous</whenMultipleApprovers>
        </assignedApprover>
        <description>Authority Matrix Level D</description>
        <entryCriteria>
            <criteriaItems>
                <field>SBQQ__Quote__c.Approver_D__c</field>
                <operation>notEqual</operation>
            </criteriaItems>
        </entryCriteria>
        <label>COO - Sale 20%+ $500k&lt; BID &gt; $3M</label>
        <name>COO_Sale_20_500k_BID_3M</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>4
Capital Dispositions =&gt; 20% mark-up over NBV
$500k &lt;= Sale &lt; $3M NBV
Existing Sale
No CAPEX
Level I, G, E, and D Approvals needed</description>
    <emailTemplate>Approval_Process/Quote_Approval_Required</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>SBQQ__Quote__c.SBQQ__NetAmount__c</field>
            <operation>greaterOrEqual</operation>
            <value>&quot;CAD 500,000&quot;</value>
        </criteriaItems>
        <criteriaItems>
            <field>SBQQ__Quote__c.SBQQ__NetAmount__c</field>
            <operation>lessThan</operation>
            <value>&quot;CAD 3,000,000&quot;</value>
        </criteriaItems>
        <criteriaItems>
            <field>SBQQ__Quote__c.Transaction_Type_Detail__c</field>
            <operation>equals</operation>
            <value>Existing Fleet Sale</value>
        </criteriaItems>
        <criteriaItems>
            <field>SBQQ__Quote__c.Markup_Sale_Lowest__c</field>
            <operation>greaterOrEqual</operation>
            <value>20</value>
        </criteriaItems>
        <criteriaItems>
            <field>SBQQ__Quote__c.CAPEX_Required__c</field>
            <operation>equals</operation>
            <value>No</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Quote_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Send_email_notification_of_Approval</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Change_to_Denied</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Send_email_notification_of_Rejection</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Pending_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>Existing Sale 20%+ $500k-$3M v1</label>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>Change_status_to_Draft</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
