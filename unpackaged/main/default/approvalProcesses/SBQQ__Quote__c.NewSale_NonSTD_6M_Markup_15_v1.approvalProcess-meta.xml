<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>creator</type>
    </allowedSubmitters>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Owner</field>
        <field>SBQQ__Account__c</field>
        <field>SBQQ__Opportunity2__c</field>
        <field>SBQQ__NetAmount__c</field>
        <field>Transaction_Type__c</field>
        <field>Transaction_Type_Detail__c</field>
        <field>Markup_Sale_Lowest__c</field>
        <field>T_C__c</field>
        <field>SBQQ__SalesRep__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Approver_I__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>Unanimous</whenMultipleApprovers>
        </assignedApprover>
        <description>Authority Matrix Level I</description>
        <entryCriteria>
            <criteriaItems>
                <field>SBQQ__Quote__c.Approver_I__c</field>
                <operation>notEqual</operation>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Branch Manager - NewSale NonSTD &gt;$6M Markup &lt;15%</label>
        <name>Branch_Manager</name>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Approver_G__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>Unanimous</whenMultipleApprovers>
        </assignedApprover>
        <description>Authority Matrix Level G</description>
        <entryCriteria>
            <criteriaItems>
                <field>SBQQ__Quote__c.Approver_G__c</field>
                <operation>notEqual</operation>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>Regional Manager - NewSale NonSTD &gt;$6M Markup &lt;15%</label>
        <name>Regional_Manager</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Approver_F__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Authority Matrix Level F</description>
        <label>Legal - NewSale NonSTD &gt;$6M Markup &lt;15%</label>
        <name>Legal_New_Sale_6M_Standard_Markup_15</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Approver_E__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Authority Matrix Level E</description>
        <entryCriteria>
            <criteriaItems>
                <field>SBQQ__Quote__c.Approver_E__c</field>
                <operation>notEqual</operation>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>VP - NewSale NonSTD &gt;$6M Markup &lt;15%</label>
        <name>VP</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Approver_D__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>Unanimous</whenMultipleApprovers>
        </assignedApprover>
        <description>Authority Matrix Level D</description>
        <entryCriteria>
            <criteriaItems>
                <field>SBQQ__Quote__c.Approver_D__c</field>
                <operation>notEqual</operation>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>GotoNextStep</ifCriteriaNotMet>
        <label>COO - NewSale NonSTD &gt;$6M Markup &lt;15%</label>
        <name>COO</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <approvalStep>
        <allowDelegate>true</allowDelegate>
        <assignedApprover>
            <approver>
                <name>Approver_A__c</name>
                <type>relatedUserField</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>Authority Matrix Level A</description>
        <label>CEO - NewSale NonSTD &gt;$6M Markup &lt;15%</label>
        <name>CEO_New_Sale_6M_Standard_Markup_15</name>
        <rejectBehavior>
            <type>RejectRequest</type>
        </rejectBehavior>
    </approvalStep>
    <description>25
New Fleet Sale &gt;15% mark-up over NBV
Total &gt;$6M
New Sale
Markup &lt;15%
No CAPEX
Non-Standard Terms
Level I, G, F, E, D, and A Approvals needed</description>
    <emailTemplate>Approval_Process/Quote_Approval_Required</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <entryCriteria>
        <criteriaItems>
            <field>SBQQ__Quote__c.Transaction_Type_Detail__c</field>
            <operation>equals</operation>
            <value>New Fleet Sale</value>
        </criteriaItems>
        <criteriaItems>
            <field>SBQQ__Quote__c.Markup_Sale_Lowest__c</field>
            <operation>lessThan</operation>
            <value>15</value>
        </criteriaItems>
        <criteriaItems>
            <field>SBQQ__Quote__c.CAPEX_Required__c</field>
            <operation>equals</operation>
            <value>No</value>
        </criteriaItems>
        <criteriaItems>
            <field>SBQQ__Quote__c.SBQQ__NetAmount__c</field>
            <operation>greaterThan</operation>
            <value>&quot;CAD 6,000,000&quot;</value>
        </criteriaItems>
        <criteriaItems>
            <field>SBQQ__Quote__c.T_C__c</field>
            <operation>contains</operation>
            <value>Non-Standard</value>
        </criteriaItems>
    </entryCriteria>
    <finalApprovalActions>
        <action>
            <name>Quote_Approved</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Send_email_notification_of_Approval</name>
            <type>Alert</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>false</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>Change_to_Denied</name>
            <type>FieldUpdate</type>
        </action>
        <action>
            <name>Send_email_notification_of_Rejection</name>
            <type>Alert</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Pending_Approval</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>NewSale NonSTD &gt;$6M Markup &lt;15% v1</label>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>Change_status_to_Draft</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
