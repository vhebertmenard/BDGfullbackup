<?xml version="1.0" encoding="utf-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <fieldUpdates>
        <fullName>Set_the_Account_SIC_Code</fullName>
        <field>Sic</field>
        <formula>LEFT( SIC_Code_Vanguard__c , FIND("-", SIC_Code_Vanguard__c )-1)</formula>
        <name>Set the Account SIC Code</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>Set_the_Account_SIC_Desc</fullName>
        <field>SicDesc</field>
        <formula>MID( SIC_Code_Vanguard__c , FIND("-", SIC_Code_Vanguard__c)+1, LEN(SIC_Code_Vanguard__c) - FIND("-", SIC_Code_Vanguard__c))</formula>
        <name>Set the Account SIC Desc</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Formula</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>Set Account SIC Code when Account updated</fullName>
        <actions>
            <name>Set_the_Account_SIC_Code</name>
            <type>FieldUpdate</type>
        </actions>
        <actions>
            <name>Set_the_Account_SIC_Desc</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Account.RecordTypeId</field>
            <operation>equals</operation>
            <value>Vanguard</value>
        </criteriaItems>
        <criteriaItems>
            <field>Account.Sic</field>
            <operation>equals</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Account.SIC_Code_Vanguard__c</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <description>Sets account SIC code and description from custom SIC_CODE field when lead is converted.</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
</Workflow>
