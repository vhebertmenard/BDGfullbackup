    <rules>
        <fullName>Calculate Opportunity Amount - Vanguard</fullName>
        <actions>
            <name>Calculate_Opportunity_Amount</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <booleanFilter>1 AND (2 OR 3)</booleanFilter>
        <criteriaItems>
            <field>Opportunity.RecordTypeId</field>
            <operation>equals</operation>
            <value>Vanguard</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.Lease_Revenue__c</field>
            <operation>greaterThan</operation>
            <value>CAD 0</value>
        </criteriaItems>
        <criteriaItems>
            <field>Opportunity.Sale_Revenue__c</field>
            <operation>greaterThan</operation>
            <value>CAD 0</value>
        </criteriaItems>
        <description>Set the Amount = Sale Revenue + Lease Revenue.  Most deals will be one or the other, but it is possible to have a deal with Lease and Sale Revenue.</description>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>Change to Bid Submittal</fullName>
        <actions>
            <name>Change_to_Bid_Submittal</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <formula>AND(        RecordType.DeveloperName  &lt;&gt; "Vanguard",       OR(           ISCHANGED( StageName )            &amp;&amp;            ISPICKVAL( StageName, "Bid Submittal")        ) )</formula>
        <triggerType>onAllChanges</triggerType>
    </rules>
