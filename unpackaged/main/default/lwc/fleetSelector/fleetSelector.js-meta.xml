<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>61.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Fleet Selector</masterLabel>

    <targets>
        <target>lightning__RecordPage</target>
        <target>lightning__AppPage</target>
        <target>lightning__FlowScreen</target>
        <target>lightning__UtilityBar</target>
    </targets>

    <targetConfigs>
        <!-- Lightning Record Pages (legacy properties kept for existing pages) -->
        <targetConfig targets="lightning__RecordPage">
            <property
                name="quoteId"
                type="String"
                label="Quote Id (legacy – not used)"
                description="Legacy property to support existing Lightning pages; ignored by component logic."
            />
            <property
                name="quoteLineId"
                type="String"
                label="Quote Line Id (legacy – not used)"
                description="Legacy property to support existing Lightning pages; ignored by component logic."
            />
        </targetConfig>

        <!-- Utility Bar: properties available but no <utilityBar> tag -->
        <targetConfig targets="lightning__UtilityBar">
            <property
                name="quoteId"
                type="String"
                label="Quote Id (legacy – not used)"
            />
            <property
                name="quoteLineId"
                type="String"
                label="Quote Line Id (legacy – not used)"
            />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
